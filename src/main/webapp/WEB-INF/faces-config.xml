<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <resource-bundle>
            <base-name>LoginMessages</base-name>
            <var>login_msg</var>
        </resource-bundle>

        <resource-bundle>
            <base-name>ValidationMessages</base-name>
            <var>validation_msg</var>
        </resource-bundle>

        <resource-bundle>
            <base-name>EmployeeMessages</base-name>
            <var>employee_msg</var>
        </resource-bundle>

        <resource-bundle>
            <base-name>OfferMessages</base-name>
            <var>offer_msg</var>
        </resource-bundle>

        <resource-bundle>
            <base-name>CommonMessages</base-name>
            <var>common_msg</var>
        </resource-bundle>
    </application>
</faces-config>

